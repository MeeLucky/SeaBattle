<Window x:Class="SeaBattleV2.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeaBattleV2"
        mc:Ignorable="d"
        Title="Настройки" Height="180" Width="350"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <StackPanel Orientation="Horizontal">
            <TextBox Width="50" FontSize="18" x:Name="Size"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
            <Label Content="Размер элементов поля" FontSize="18"/>
        </StackPanel>
        
        
        <Button IsDefault="true" Content="Сохранить"
                Width="100" FontSize="18"
                Margin="20" Click="Save"/>
    </StackPanel>
</Window>
